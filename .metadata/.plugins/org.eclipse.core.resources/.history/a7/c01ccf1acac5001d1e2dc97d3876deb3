 *      Author: samir
 */

#ifndef SYSTICK_H_
#define SYSTICK_H_

#include "Std_types.h"
#include "Bit_math.h"
/*====================================================================================================*/
/******************************************* Macros ***************************************************/
/*====================================================================================================*/
#define Status_INT_EN   1
#define Status_INT_DIS  0

/********************************************** END ****************************************************/
/*====================================================================================================*/

/*====================================================================================================*/
/******************************************* Types ****************************************************/
/*====================================================================================================*/

/*************************** ErrorStatus ***************************/
typedef enum
{
    SYS_OK,
    SYS_NOTOK,
    SYS_NullPointer,
    SYS_ParameterError
}SYSTICKErrorStatus_t; 

/***************************************************END************************************************/
/*====================================================================================================*/

/*===================================================================================================*/
/************************************************ APIs ***********************************************/
/*===================================================================================================*/ 


/****************************************************************************************/
/*                       SYSTICK_init  function                                         */
/****************************************************************************************/
/*  Description: used to  init the SYS tick                                             */
/* 	input:       clouck  to configure the tick  .                                       */
/* 	return:      SYSTICKErrorStatus_t                                                   */
/****************************************************************************************/
SYSTICKErrorStatus_t SYSTICK_init(u32 clock);

/****************************************************************************************/
/*                       SYSTICK_start  function                                        */
/****************************************************************************************/
/*  Description: used to  start the SYS tick                                            */
/* 	input:       void  .                                                                */
/* 	return:      void                                                                   */
/****************************************************************************************/
void SYSTICK_start(void);

/****************************************************************************************/
/*                       SYSTICK_stop  function                                         */
/****************************************************************************************/
/*  Description: used to  stop the SYS tick                                             */
/* 	input:       void  .                                                                */
/* 	return:      void                                                                   */
/****************************************************************************************/
void SYSTICK_stop(void);

/****************************************************************************************/
/*                       SYSTICK_setCallBackFunc  function                              */
/****************************************************************************************/
/*  Description: used to  set the notifucation function                                 */
/* 	input:       void  .                                                                */
/* 	return:      SYSTICKErrorStatus_t                                                   */
/****************************************************************************************/
SYSTICKErrorStatus_t SYSTICK_setCallBackFunc(void(*notifFunction)(void));

/****************************************************************************************/
/*                       SYSTICK_enableINT  function                                   */
/****************************************************************************************/
/*  Description: used to  enable the sysTick interrupt                                 */
/* 	input:       void             .                                                    */
/* 	return:      void                                                                   */
/****************************************************************************************/
void SYSTICK_enableINT(void);

/****************************************************************************************/
/*                       SYSTICK_disableINT  function                                   */
/****************************************************************************************/
/*  Description: used to  disable the sysTick interrupt                                 */
/* 	input:       void             .                                                     */
/* 	return:      void                                                                   */
/****************************************************************************************/
void SYSTICK_disableINT(void);

/****************************************************************************************/
/*                       SYSTICK_setTick_ms  function                                   */
/****************************************************************************************/
/*  Description: used to  set the sysTick period in ms                                  */
/* 	input:       Cpy_PreloadValue  .                                                    */
/* 	return:      SYSTICKErrorStatus_t                                                   */
/****************************************************************************************/
SYSTICKErrorStatus_t SYSTICK_setTick_ms(u32 ticks);

/****************************************************************************************/
/*                       SYSTICK_setTick_us  function                                   */
/****************************************************************************************/
/*  Description: used to  set the sysTick period in us                                  */
/* 	input:       Cpy_PreloadValue  .                                                    */
/* 	return:      SYSTICKErrorStatus_t                                                   */
/****************************************************************************************/
SYSTICKErrorStatus_t SYSTICK_setTick_us(u64 ticks);

/***************************************************END************************************************/
/*====================================================================================================*/
#endif /* SYSTICK_H_ */
